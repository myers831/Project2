<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.project2.HomeActivity"
    android:background="@drawable/zoro">

    <Button
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:text="Anime and Manga History"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="@color/colorBluish"
        android:background="@color/colorGreenish"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        android:onClick="buttonPress"
        android:id="@+id/btnAM"
        />
    <Button
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:text="Anime Laugh"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="@color/colorBluish"
        android:background="@color/colorGreenish"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        android:onClick="buttonPress"
        android:id="@+id/btnAL"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp">
        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Alert 1"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="@color/colorBluish"
            android:background="@color/colorGreenish"
            android:layout_marginTop="20dp"
            android:onClick="buttonPress"
            android:id="@+id/btnA1"
            android:layout_marginRight="10dp"
            android:paddingBottom="7dp"
            />
        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Alert 2"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="@color/colorBluish"
            android:background="@color/colorGreenish"
            android:layout_marginTop="20dp"
            android:onClick="buttonPress"
            android:id="@+id/btnA2"
            android:paddingBottom="7dp"

            />
        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Alert 3"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="@color/colorBluish"
            android:background="@color/colorGreenish"
            android:layout_marginTop="20dp"
            android:onClick="buttonPress"
            android:id="@+id/btnA3"
            android:layout_marginLeft="10dp"
            android:paddingBottom="7dp"
            />
    </LinearLayout>

    <Button
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:text="Anime Notification"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="@color/colorBluish"
        android:background="@color/colorGreenish"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        android:onClick="buttonPress"
        android:id="@+id/btnAN"
        />

    <Button
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:text="Send Fav Anime As Text Msg"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="@color/colorBluish"
        android:background="@color/colorGreenish"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        android:onClick="buttonPress"
        android:id="@+id/btnAST"
        />

    <Button
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:text="Power Level"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="@color/colorBluish"
        android:background="@color/colorGreenish"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        android:onClick="buttonPress"
        android:id="@+id/btnT"
        />

</LinearLayout>
